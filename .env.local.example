# ===== App language =====
NEXT_PUBLIC_APP_LANG_DEFAULT=en

# ===== Browser voice hints (Web Speech API) =====
# These are *browser voice names*, not Azure. They vary by OS. Safe to leave blank.
NEXT_PUBLIC_TTS_VOICE_EN=
NEXT_PUBLIC_TTS_VOICE_JA=

# ===== Azure TTS (for later server integration) =====
# When you add an API route, copy this file to .env.local and fill these:
AZURE_TTS_KEY=
AZURE_TTS_REGION=
AZURE_TTS_ENDPOINT=
AZURE_TTS_DEFAULT_VOICE_EN=en-GB-LibbyNeural
AZURE_TTS_DEFAULT_VOICE_JA=ja-JP-NanamiNeural
